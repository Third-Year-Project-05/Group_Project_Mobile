<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D4E8B"
    tools:context=".View.LiveConversation">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-18dp"
        app:srcCompat="@drawable/rectangle_26__2__cropped" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Get in to a Live Conversation"
        android:textColor="#3D4E8B"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:backgroundTint="#3D4E8B"
        android:text="Start" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-4dp"
        android:text="Connecting Voices, Uniting Hearts" />
</RelativeLayout>