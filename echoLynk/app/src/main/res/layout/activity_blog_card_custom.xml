<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blog_card_custom"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    tools:context=".View.Blog.blog_card_custom"
    android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/blog_main_card"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="#D3E4E1D4"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline">

        <LinearLayout
            android:id="@+id/blog_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/blog_image"
                app:shapeAppearanceOverlay="@style/homepage_blog_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#C95113B5"
                android:contentDescription="Blog image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dummy_blog_img1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/blog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="5dp"
                    android:text="What is Text-to-Speech?"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/blog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_light"
                    android:text="by Echolynk Team"
                    android:textColor="#D0000000"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/blog_description"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_weight="12"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="5dp"
                android:text="Read More >"
                android:textColor="#D0000000"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>