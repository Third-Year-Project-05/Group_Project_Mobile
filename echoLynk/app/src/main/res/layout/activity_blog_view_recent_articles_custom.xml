<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_article_custom_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:onClick="recentBlogOnClick"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".View.BlogViewRecentArticlesCustom">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blog_view_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/image_rounded_conner"
        app:srcCompat="@drawable/dummyprofileimage" />


    <TextView
        android:id="@+id/blog_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blog_title_text_background"
        android:paddingStart="2dp"
        android:paddingTop="5dp"
        android:paddingEnd="2dp"
        android:paddingBottom="10dp"
        android:text="Breaking Silence: Inspirational Journeys"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>