<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Profile.SwitchToPremiumActivity">

    <ImageView
        android:id="@+id/switch_to_premium_back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/arrow_left_icon" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch_to_premium_back_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Switch to Premium"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView38"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif"
        android:text="Go Premium Now "
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView42"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="Unlock Valuable Features you should follow"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView43"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="16dp"
        android:padding="20dp" >

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#14072B29"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="108dp"
                android:layout_height="76dp"
                tools:srcCompat="@drawable/suggestion_premium" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/imageView15"
                android:fontFamily="sans-serif"
                android:text="Suggestion Massages"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="203dp"
                android:layout_height="56dp"
                android:layout_below="@+id/textView48"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView15"
                android:text="The system delivers clear responses to all queries, ensuring effective communication."
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_below="@+id/cardView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="16dp"
        android:padding="20dp" >

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#14072B29"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="108dp"
                android:layout_height="76dp"
                tools:srcCompat="@drawable/outline_video_chat_24" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/imageView16"
                android:fontFamily="sans-serif"
                android:text="Video Chat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50.2"
                android:layout_width="203dp"
                android:layout_height="56dp"
                android:layout_below="@+id/textView49"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView16"
                android:text="The system ensures seamless video chats with clear visuals and audio for effective communication."
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="16dp"
        android:padding="20dp" >

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#140E2B07"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="108dp"
                android:layout_height="76dp"
                tools:srcCompat="@drawable/image_generation"/>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/imageView17"
                android:fontFamily="sans-serif"
                android:text="Image Generation"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50.3"
                android:layout_width="203dp"
                android:layout_height="56dp"
                android:layout_below="@+id/textView51"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView17"
                android:text="The system generates accurate and creative images on request."
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/subscribeBTN"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cardView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_background"
        android:text="Subscribe now"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>